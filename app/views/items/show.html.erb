<%= turbo_stream_from "item" %>
<p style="color: green"><%= notice %></p>

<div>
  <%= link_to "Edit this item", edit_item_path(@item) %> |
  <%= link_to "Back to items", items_path %>
  <%= button_to "Destroy this item", @item, method: :delete %>
</div>

<div class="bg-white">
  <div class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
    <h2 class="text-2xl font-extrabold tracking-tight text-gray-900">Item</h2>
    <div class="mt-6 grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
      <%= turbo_frame_tag "item" do %>
        <%= render @item %>
      <% end %>
    </div>
  </div>
</div>
